{
  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "TSX": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JSX": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JSON": {
      "formatter": {
        "external": {
          "command": "npx",
          "arguments": ["@biomejs/biome", "format", "--stdin-file-path", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    }
  },
  "lsp": {
    "biome": {
      "binary": {
        "path": "npx",
        "arguments": ["@biomejs/biome", "lsp-proxy"]
      }
    }
  },
  "formatter": "auto"
}
